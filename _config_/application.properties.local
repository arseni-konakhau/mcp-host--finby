# Application configuration
spring.application.name=mcp-llm
server.address=localhost
server.port=3336

# MCP Client configuration
mcp.client.url=http://localhost:3335
mcp.client.timeout=30s

# DeepSeek API configuration
deepseek.api-url=https://api.deepseek.com
deepseek.api-token=sk-136122b3bb5342b0963bc7a2839b1d90
deepseek.timeout=30s

# Intent analysis configuration
mcp.intent.confidence-threshold=0.7
mcp.intent.mcp-enabled=true
mcp.intent.llm-enabled=true

# Security configuration (MVP - simple)
mcp.security.api-key=${API_KEY:}

# HTTP client configuration
http.max.connections=20
http.connection.timeout=10s
http.read.timeout=30s

# Actuator endpoints
management.endpoints.web.exposure.include=health,info
management.endpoint.health.show-details=always

# Logging
logging.level.com.mcpllm=INFO
logging.level.org.springframework.web.reactive.function.client=INFO

# HTTPS:
server.ssl.enabled=true
server.ssl.protocol=TLS
server.ssl.enabled-protocols=TLSv1.3
server.ssl.key-store-type=PKCS12
server.ssl.key-store=classpath:mcp-host-keystore.p12
server.ssl.key-store-password=11111111111111
server.ssl.key-alias=mcp-host-alias
